<Window x:Class="Lvchaxs_ZH.AddEditAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="账号管理"
        Width="340"
        Height="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderThickness="0">

    <Window.Effect>
        <DropShadowEffect Color="#1F000000" 
                          Direction="315" 
                          ShadowDepth="3" 
                          Opacity="0.1" 
                          BlurRadius="10"/>
    </Window.Effect>

    <Window.Resources>
        <!-- 缓动函数 -->
        <QuadraticEase x:Key="QuadEaseOut" EasingMode="EaseOut"/>

        <!-- 动画 -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="0.95" To="1" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="0.95" To="1" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
        </Storyboard>

        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1" To="0.95" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1" To="0.95" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
        </Storyboard>

        <!-- 通用样式 -->
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <Style x:Key="WatermarkStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>

        <Style x:Key="InputBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <!-- 按钮样式 -->
        <Style x:Key="CompactPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CompactSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TransparentIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="mainBorder"
            Background="White"
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="#E2E8F0"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
        </Border.RenderTransform>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="52"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0"
                    Background="#F8FAFC"
                    CornerRadius="10,10,0,0"
                    BorderBrush="#E2E8F0"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock x:Name="windowTitle"
                               Text="添加账号"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#334155"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <Button x:Name="closeButton"
                            Style="{StaticResource TransparentIconButtonStyle}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Click="CloseButton_Click">
                        <TextBlock Text="×" 
                                   FontSize="18"
                                   Foreground="#64748B"/>
                    </Button>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="24,16,24,12">
                <StackPanel>
                    <!-- UID -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="UID" Style="{StaticResource LabelTextStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Grid>
                                <TextBlock x:Name="uidWatermarkText" 
                                           Text="9位数UID: 155333279" 
                                           Style="{StaticResource WatermarkStyle}"/>
                                <TextBox x:Name="uidTextBox"
                                         Style="{StaticResource InputBoxStyle}"
                                         MaxLength="9"
                                         PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                                         TextChanged="UIDTextBox_TextChanged"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- 冒险等级 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="冒险等级" Style="{StaticResource LabelTextStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Grid>
                                <TextBlock x:Name="levelWatermarkText" 
                                           Text="冒险等级1~60" 
                                           Style="{StaticResource WatermarkStyle}"/>
                                <TextBox x:Name="levelTextBox"
                                         Style="{StaticResource InputBoxStyle}"
                                         MaxLength="2"
                                         PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                                         TextChanged="LevelTextBox_TextChanged"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- 昵称 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="昵称" Style="{StaticResource LabelTextStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Grid>
                                <TextBlock x:Name="nicknameWatermarkText" 
                                           Text="账号昵称: 伴生" 
                                           Style="{StaticResource WatermarkStyle}"/>
                                <TextBox x:Name="nicknameTextBox"
                                         Style="{StaticResource InputBoxStyle}"
                                         TextChanged="NicknameTextBox_TextChanged"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- 账号 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="账号" Style="{StaticResource LabelTextStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Grid>
                                <TextBlock x:Name="usernameWatermarkText" 
                                           Text="手机号/邮箱" 
                                           Style="{StaticResource WatermarkStyle}"/>
                                <TextBox x:Name="usernameTextBox"
                                         Style="{StaticResource InputBoxStyle}"
                                         TextChanged="UsernameTextBox_TextChanged"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- 密码 -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="密码" Style="{StaticResource LabelTextStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource InputBorderStyle}">
                                <Grid>
                                    <TextBlock x:Name="passwordWatermarkText" 
                                               Text="账号密码" 
                                               Style="{StaticResource WatermarkStyle}"
                                               Margin="8,0,36,0"/>
                                    <PasswordBox x:Name="passwordBox"
                                                 PasswordChanged="PasswordBox_PasswordChanged"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Height="32"
                                                 FontSize="12"
                                                 VerticalAlignment="Center"
                                                 Padding="8,6,36,6"
                                                 Visibility="Visible"/>
                                    <TextBox x:Name="passwordTextBox"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Height="32"
                                             FontSize="12"
                                             VerticalAlignment="Center"
                                             Padding="8,6,36,6"
                                             Visibility="Collapsed"
                                             TextChanged="PasswordTextBox_TextChanged"/>
                                </Grid>
                            </Border>

                            <Button x:Name="togglePasswordButton"
                                    Grid.Column="1"
                                    Style="{StaticResource TransparentIconButtonStyle}"
                                    Margin="-36,0,0,0"
                                    Height="32"
                                    Width="36"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Click="TogglePasswordButton_Click">
                                <Viewbox Width="18" Height="18">
                                    <Grid Width="18" Height="18">
                                        <Path x:Name="eyeOpenIcon"
                                              Visibility="Visible"
                                              Data="M9,3 C13.5,3 18,9 18,9 C18,9 13.5,15 9,15 C4.5,15 0,9 0,9 C0,9 4.5,3 9,3 Z M9,6 C6.75,6 6,7.5 6,9 C6,10.5 6.75,12 9,12 C11.25,12 12,10.5 12,9 C12,7.5 11.25,6 9,6 Z"
                                              Stroke="#9CA3AF" 
                                              StrokeThickness="1.5"
                                              Fill="Transparent"/>
                                        <Grid x:Name="eyeClosedIcon"
                                              Visibility="Collapsed">
                                            <Path Data="M9,3 C13.5,3 18,9 18,9 C18,9 13.5,15 9,15 C4.5,15 0,9 0,9 C0,9 4.5,3 9,3 Z M9,6 C6.75,6 6,7.5 6,9 C6,10.5 6.75,12 9,12 C11.25,12 12,10.5 12,9 C12,7.5 11.25,6 9,6 Z"
                                                  Stroke="#9CA3AF" 
                                                  StrokeThickness="1.5"
                                                  Fill="Transparent"/>
                                            <Line X1="3" Y1="3" X2="15" Y2="15"
                                                  Stroke="#9CA3AF"
                                                  StrokeThickness="1.5"/>
                                        </Grid>
                                    </Grid>
                                </Viewbox>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- 密码强度 -->
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="passwordStrengthText"
                                       Text="密码强度："
                                       FontSize="10"
                                       Foreground="#64748B"
                                       Margin="0,0,6,0"
                                       Grid.Column="0"/>
                            <Border Height="3"
                                    Background="#E2E8F0"
                                    CornerRadius="2"
                                    Grid.Column="1">
                                <Border x:Name="passwordStrengthBar"
                                        Width="0"
                                        Background="#EF4444"
                                        CornerRadius="2"
                                        HorizontalAlignment="Left"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- 按钮区域 -->
            <Border Grid.Row="2"
                    Background="#F8FAFC"
                    CornerRadius="0,0,10,10"
                    BorderBrush="#E2E8F0"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0">
                    <Button x:Name="cancelButton"
                            Content="取消"
                            Style="{StaticResource CompactSecondaryButtonStyle}"
                            Click="CancelButton_Click"
                            Width="90"
                            Margin="0,0,8,0"/>
                    <Button x:Name="saveButton"
                            Content="保存"
                            Style="{StaticResource CompactPrimaryButtonStyle}"
                            Click="SaveButton_Click"
                            Width="90"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>