<Window x:Class="Lvchaxs_ZH.AddAccountsToGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="移入账号"
        Width="430"
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Effect>
        <DropShadowEffect Color="#1F000000" Direction="315" ShadowDepth="3" Opacity="0.1" BlurRadius="10"/>
    </Window.Effect>

    <Window.Resources>
        <!-- 缓动函数 -->
        <QuadraticEase x:Key="QuadEaseOut" EasingMode="EaseOut"/>

        <!-- 动画 -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.15" EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="0.95" To="1" Duration="0:0:0.15" EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="0.95" To="1" Duration="0:0:0.15" EasingFunction="{StaticResource QuadEaseOut}"/>
        </Storyboard>

        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.15" EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="1" To="0.95" Duration="0:0:0.15" EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="1" To="0.95" Duration="0:0:0.15" EasingFunction="{StaticResource QuadEaseOut}"/>
        </Storyboard>

        <!-- 颜色资源 -->
        <Color x:Key="PrimaryBlueColor">#3B82F6</Color>
        <Color x:Key="PrimaryBlueHoverColor">#2563EB</Color>
        <Color x:Key="PrimaryBluePressedColor">#1D4ED8</Color>
        <Color x:Key="BorderGrayColor">#E2E8F0</Color>
        <Color x:Key="LightGrayColor">#64748B</Color>
        <Color x:Key="DarkGrayColor">#374151</Color>
        <Color x:Key="LightBlueColor">#F0F9FF</Color>
        <Color x:Key="LightBlueBorderColor">#BAE6FD</Color>
        <Color x:Key="LightBlueTextColor">#0369A1</Color>
        <Color x:Key="LightPurpleColor">#F3E8FF</Color>
        <Color x:Key="LightBackgroundColor">#F8FAFC</Color>
        <Color x:Key="MediumBackgroundColor">#F9FAFB</Color>
        <Color x:Key="RowBorderColor">#F3F4F6</Color>
        <Color x:Key="TextColor">#111827</Color>
        <Color x:Key="DisabledColor">#9CA3AF</Color>

        <!-- 画笔 -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlueColor}"/>
        <SolidColorBrush x:Key="PrimaryBlueHoverBrush" Color="{StaticResource PrimaryBlueHoverColor}"/>
        <SolidColorBrush x:Key="PrimaryBluePressedBrush" Color="{StaticResource PrimaryBluePressedColor}"/>
        <SolidColorBrush x:Key="BorderGrayBrush" Color="{StaticResource BorderGrayColor}"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGrayColor}"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGrayColor}"/>
        <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlueColor}"/>
        <SolidColorBrush x:Key="LightBlueBorderBrush" Color="{StaticResource LightBlueBorderColor}"/>
        <SolidColorBrush x:Key="LightBlueTextBrush" Color="{StaticResource LightBlueTextColor}"/>
        <SolidColorBrush x:Key="LightPurpleBrush" Color="{StaticResource LightPurpleColor}"/>
        <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackgroundColor}"/>
        <SolidColorBrush x:Key="MediumBackgroundBrush" Color="{StaticResource MediumBackgroundColor}"/>
        <SolidColorBrush x:Key="RowBorderBrush" Color="{StaticResource RowBorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}"/>

        <!-- 按钮基础样式 -->
        <Style x:Key="ButtonBaseStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- 主按钮样式 -->
        <Style x:Key="CompactPrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBlueHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBluePressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 次要按钮样式 -->
        <Style x:Key="CompactSecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 关闭按钮样式 -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- 排序箭头样式 -->
        <Style x:Key="SortArrowStyle" TargetType="Path">
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Fill" Value="{StaticResource DisabledBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>

        <Style x:Key="ActiveSortArrowStyle" TargetType="Path" BasedOn="{StaticResource SortArrowStyle}">
            <Setter Property="Fill" Value="#1A56DB"/>
        </Style>

        <!-- 文本样式 -->
        <Style x:Key="ColumnHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGrayBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 世界等级徽章样式 -->
        <Style x:Key="WorldLevelBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource LightPurpleBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 账号项文本样式 -->
        <Style x:Key="AccountTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- UID文本样式 -->
        <Style x:Key="UidTextStyle" TargetType="TextBlock" BasedOn="{StaticResource AccountTextStyle}">
            <Setter Property="FontFamily" Value="Consolas, 'Courier New', monospace"/>
        </Style>
    </Window.Resources>

    <Border x:Name="mainBorder"
            Background="White"
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="{StaticResource BorderGrayBrush}"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
        </Border.RenderTransform>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="52"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0"
                    Background="{StaticResource LightBackgroundBrush}"
                    CornerRadius="10,10,0,0"
                    BorderBrush="{StaticResource BorderGrayBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="移入账号"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#334155"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <Button x:Name="closeButton"
                            Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Click="CloseButton_Click">
                        <TextBlock Text="×"/>
                    </Button>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 提示信息 -->
                <Border Grid.Row="0"
                        Background="{StaticResource LightBlueBrush}"
                        BorderBrush="{StaticResource LightBlueBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,8"
                        Margin="16,16,16,12">
                    <Grid>
                        <TextBlock x:Name="groupStatsText" Grid.Column="0"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightBlueTextBrush}"
                                   TextWrapping="Wrap"/>
                        <TextBlock Grid.Column="1"
                                   x:Name="selectionCountText"
                                   Text="已选择 0 个账号"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightBlueTextBrush}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- 列标题区域 -->
                <Border Grid.Row="1"
                        Background="{StaticResource MediumBackgroundBrush}"
                        BorderBrush="{StaticResource MediumBackgroundBrush}"
                        BorderThickness="0,0,0,1"
                        Height="25"
                        VerticalAlignment="Center">
                    <Grid Margin="16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <!-- UID列标题 -->
                        <Border Grid.Column="0" Background="Transparent" Cursor="Hand" MouseDown="ColumnHeader_MouseDown">
                            <Border.Tag>
                                <sys:String>Uid</sys:String>
                            </Border.Tag>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="UID" Style="{StaticResource ColumnHeaderStyle}" Margin="30,0,0,0"/>
                                <StackPanel Margin="4,0,0,0" Orientation="Vertical" Height="16" VerticalAlignment="Center">
                                    <Path x:Name="uidAscArrow" Style="{StaticResource SortArrowStyle}" Data="M 1,5 L 4,1 L 7,5 Z"/>
                                    <Path x:Name="uidDescArrow" Style="{StaticResource SortArrowStyle}" Data="M 1,1 L 4,5 L 7,1 Z"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- 等级列标题 -->
                        <Border Grid.Column="1" Background="Transparent" Cursor="Hand" MouseDown="ColumnHeader_MouseDown">
                            <Border.Tag>
                                <sys:String>Level</sys:String>
                            </Border.Tag>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="等级" Style="{StaticResource ColumnHeaderStyle}" Margin="13,0,0,0"/>
                                <StackPanel Orientation="Vertical" Height="16" VerticalAlignment="Center" Margin="2,0,0,0">
                                    <Path x:Name="levelAscArrow" Style="{StaticResource SortArrowStyle}" Data="M 1,5 L 4,1 L 7,5 Z"/>
                                    <Path x:Name="levelDescArrow" Style="{StaticResource SortArrowStyle}" Data="M 1,1 L 4,5 L 7,1 Z"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- 昵称列标题 -->
                        <Border Grid.Column="2" Background="Transparent" Cursor="Hand" MouseDown="ColumnHeader_MouseDown" HorizontalAlignment="Left" Width="136">
                            <Border.Tag>
                                <sys:String>Nickname</sys:String>
                            </Border.Tag>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="昵称" Style="{StaticResource ColumnHeaderStyle}" Margin="16,0,0,0"/>
                                <StackPanel Margin="4,0,0,0" Orientation="Vertical" Height="16" VerticalAlignment="Center">
                                    <Path x:Name="nicknameAscArrow" Style="{StaticResource SortArrowStyle}" Data="M 1,5 L 4,1 L 7,5 Z"/>
                                    <Path x:Name="nicknameDescArrow" Style="{StaticResource SortArrowStyle}" Data="M 1,1 L 4,5 L 7,1 Z"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- 选择列标题 -->
                        <TextBlock Grid.Column="3" 
                                   Text="选择" 
                                   Style="{StaticResource ColumnHeaderStyle}"/>
                    </Grid>
                </Border>

                <!-- 账号列表 -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Height="310"
                              VerticalAlignment="Top"
                              Margin="0,10,0,0">
                    <StackPanel Margin="0">
                        <ItemsControl x:Name="accountsItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White"
                                            BorderBrush="{StaticResource RowBorderBrush}"
                                            BorderThickness="0,0,0,1"
                                            Padding="16,12"
                                            VerticalAlignment="Top"
                                            MouseDown="AccountItem_MouseDown">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="40"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- UID -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Uid}"
                                                       Style="{StaticResource UidTextStyle}"
                                                       Margin="16,0,8,0"/>

                                            <!-- 等级 -->
                                            <Border Grid.Column="1" Style="{StaticResource WorldLevelBadgeStyle}">
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="Lv.{0} s{1}">
                                                            <Binding Path="Level"/>
                                                            <Binding Path="WorldLevel"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Border>

                                            <!-- 昵称 -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Nickname}"
                                                       Style="{StaticResource AccountTextStyle}"
                                                       Margin="8,0,8,0"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <!-- 选择框 -->
                                            <CheckBox Grid.Column="3"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      IsChecked="{Binding IsSelected}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- 无账号提示 -->
                        <Border x:Name="noAccountsMessage"
                                Visibility="Collapsed"
                                Background="White"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Padding="40"
                                Margin="0,20,0,0">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <TextBlock Text="📭" FontSize="32" HorizontalAlignment="Center" Foreground="{StaticResource DisabledBrush}" Margin="0,0,0,15"/>
                                <TextBlock Text="没有可用的账号" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource DarkGrayBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="请先添加账号" FontSize="14" Foreground="{StaticResource LightGrayBrush}" Margin="0,5,0,15" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- 按钮区域 -->
            <Border Grid.Row="2"
                    Background="{StaticResource LightBackgroundBrush}"
                    CornerRadius="0,0,10,10"
                    BorderBrush="{StaticResource BorderGrayBrush}"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="16,0">
                    <Button x:Name="cancelButton"
                            Content="取消"
                            Style="{StaticResource CompactSecondaryButtonStyle}"
                            Click="CancelButton_Click"
                            Width="90"
                            Margin="0,0,8,0"/>
                    <Button x:Name="addButton"
                            Content="移入"
                            Style="{StaticResource CompactPrimaryButtonStyle}"
                            Click="AddButton_Click"
                            Width="90"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>