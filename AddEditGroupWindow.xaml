<Window x:Class="Lvchaxs_ZH.AddEditGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="分组管理"
        Width="337"
        Height="228"
    WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Effect>
        <DropShadowEffect Color="#1F000000" 
                          Direction="315" 
                          ShadowDepth="3" 
                          Opacity="0.1" 
                          BlurRadius="10"/>
    </Window.Effect>

    <Window.Resources>
        <QuadraticEase x:Key="QuadEaseOut" EasingMode="EaseOut"/>

        <!-- 动画 -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="0.95" To="1" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="0.95" To="1" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
        </Storyboard>

        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1" To="0.95" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1" To="0.95" Duration="0:0:0.15"
                             EasingFunction="{StaticResource QuadEaseOut}"/>
        </Storyboard>

        <!-- 按钮样式 -->
        <Style x:Key="CompactPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CompactSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </Window.Resources>

    <Border x:Name="mainBorder"
            Background="White"
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="#E2E8F0"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
        </Border.RenderTransform>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="52"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0"
                    Background="#F8FAFC"
                    CornerRadius="10,10,0,0"
                    BorderBrush="#E2E8F0"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock x:Name="windowTitle"
                               Text="添加分组"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#334155"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <Button x:Name="closeButton"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#64748B"
                            FontSize="18"
                            Width="32"
                            Height="32"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Click="CloseButton_Click">
                        <TextBlock Text="×"/>
                    </Button>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <Grid Grid.Row="1"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center">
                <StackPanel Width="260">
                    <!-- 分组名称 -->
                    <TextBlock Text="分组名称"
                               FontSize="12"
                               Foreground="#475569"
                               FontWeight="Medium"
                               Margin="0,0,0,4"/>

                    <Border Style="{StaticResource InputBorderStyle}">
                        <Grid>
                            <TextBlock x:Name="groupNameWatermark" 
                                       Text="请输入分组名称" 
                                       VerticalAlignment="Center"
                                       Margin="8,0"
                                       Foreground="#9CA3AF"
                                       IsHitTestVisible="False"/>
                            <TextBox x:Name="groupNameTextBox"
                                     Text=""
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Height="32"
                                     FontSize="12"
                                     VerticalAlignment="Center"
                                     Padding="8,6"
                                     TextChanged="GroupNameTextBox_TextChanged"/>
                        </Grid>
                    </Border>

                    <!-- 新增：标签备注 -->
                    <TextBlock Text="标签备注"
                               FontSize="12"
                               Foreground="#475569"
                               FontWeight="Medium"
                               Margin="0,8,0,4"/>

                    <Border Style="{StaticResource InputBorderStyle}">
                        <Grid>
                            <TextBlock x:Name="tagNoteWatermark" 
                                       Text="可填可不填的备注信息" 
                                       VerticalAlignment="Center"
                                       Margin="8,0"
                                       Foreground="#9CA3AF"
                                       IsHitTestVisible="False"/>
                            <TextBox x:Name="tagNoteTextBox"
                                     Text=""
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Height="32"
                                     FontSize="12"
                                     VerticalAlignment="Center"
                                     Padding="8,6"
                                     TextChanged="TagNoteTextBox_TextChanged"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- 按钮区域 -->
            <Border Grid.Row="2"
                    Background="#F8FAFC"
                    CornerRadius="0,0,10,10"
                    BorderBrush="#E2E8F0"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0">
                    <Button x:Name="cancelButton"
                            Content="取消"
                            Style="{StaticResource CompactSecondaryButtonStyle}"
                            Click="CancelButton_Click"
                            Width="90"
                            Margin="0,0,8,0"/>
                    <Button x:Name="saveButton"
                            Content="保存"
                            Style="{StaticResource CompactPrimaryButtonStyle}"
                            Click="SaveButton_Click"
                            Width="90"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>